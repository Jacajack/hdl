	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'hdl'",
			"cargo": {
				"args": [
					"build",
					"--bin=hdl",
					"--package=hdl",
					"--package=hdllang",
				],
				"filter": {
					"name": "hdl",
					"kind": "bin"
				}
			},
			"args": ["-m", "compile", "example.hirl"], // Needs to be updated for new stages
			"cwd": "${workspaceFolder}",
			"env": {
				"RUST_BACKTRACE": "1",
				"RUST_LOG": "debug",
			}
		},
